<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Contador Manual" BackgroundColor ="Beige"
             x:Class="Contador_Manual.MainPage">


    <VerticalStackLayout
        Margin="24">
        <Label
            Text="conteo: "
            FontSize="Medium"/>
        <Border
            Stroke="Gray"
            Margin="0,24,0,36">
            <Label
                Text="0"
                HorizontalOptions="Center"
                Margin="0,24"
                FontSize="Large"
                FontAttributes="Bold"
                x:Name="ConteoLabel"
                BackgroundColor="Red"/>

        </Border>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="32">
            <Button
            Text="contar"
            WidthRequest="130"
            FontSize="Medium"
            Clicked="Button_Clicked_1"/>
            <Button
            Text="reiniciar"
            WidthRequest="130"
            FontSize="Medium"
            Clicked="Button_Clicked"/>
        </HorizontalStackLayout>



    </VerticalStackLayout>

</ContentPage>
